<h4 class="header__page">Детали</h4>

<table class="table">
    <tr>
      <td>
        <%= @range['content_db'] %>
        <br>
        <br>
        <%# <%= @range %> 
        <span>Добавлен в: </span><%= @range['date_create'] %>
      </td>
    </tr>
</table>

<h4 class="header__page">Комментарий</h4>

<% @comments_select.each do |item| %>
  <tr>
    <td>
      <br>
      <%= item['comment_db'] %>
      <br>
      <br>
      <span>Добавлен в: </span><%= item['date_create'] %>
      <br>
      <a href="/details/<%= item['id'] %>">Комментарий</a>
    </td>
  </tr>
<% end %>

<form action="/details/<%= @range['id'] %>" method="POST">
  <br>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Добавить комментарий</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Введите текст комментария" name="comment_text"></textarea>
  </div>
  <br>
  <button type="submit" class="btn btn-success">Отправить</button>
</form>
